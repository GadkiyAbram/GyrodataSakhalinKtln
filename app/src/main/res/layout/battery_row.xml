<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/expandableBatteryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linLayoutForBoth"
            android:orientation="vertical"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_margin="5dp"
                android:id="@+id/linLayoutLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Serial 2 / 3:"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorSimpleBlack"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:id="@+id/tvSerNum2"
                        android:text=""
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:id="@+id/tvSerNum3"
                        android:text=""
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:text="Invoice / CCD:"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:id="@+id/tvBatteryInvoice"
                        android:text="O/11/22"
                        android:textSize="16dp"
                        android:layout_weight="2"
                        android:textAlignment="textEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:id="@+id/tvBatteryCCD"
                        android:text="10707090-021216-0014969"
                        android:textSize="16dp"
                        android:layout_weight="2"
                        android:textAlignment="textEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:text="Manufactured:"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:id="@+id/tvManuf"
                        android:text="17/11/2016"
                        android:textSize="16dp"
                        android:layout_weight="4"
                        android:textAlignment="textEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:text="Location:"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:id="@+id/tvBatteryLocation"
                        android:text="SLB, GYLS-001"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:id="@+id/linLayoutRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:text="Comments:"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorSimpleBlack"
                        android:id="@+id/tvBatteryComments"
                        android:text="RU1750"
                        android:textSize="16dp"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>