<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:background="@color/backColorJobPrecise"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/progress_bar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="3dp"
            android:gravity="center"
            android:background="@drawable/edittext_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:padding="7dp"
                android:layout_weight="1"
                android:textSize="22dp"
                android:text="Add Battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <include layout="@layout/battery_condition_switch"/>

            <Button
                android:text="Add"
                android:backgroundTint="@color/swipeBtnBackground"
                android:layout_gravity="end"
                android:textColor="#838383"
                android:id="@+id/addBatteryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="3dp"
            android:id="@+id/linLayoutUp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:minWidth="140dp"
                android:hint="S1-0331-9999"
                android:id="@+id/edBatterySerial1"
                android:background="@drawable/edittext_shape"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/background_dark"/>

            <EditText
                android:hint="Invoice"
                android:background="@drawable/edittext_shape"
                android:id="@+id/edBatteryInvoice"
                android:layout_weight="1"
                android:padding="7dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:hint="Box N"
                android:background="@drawable/edittext_shape"
                android:id="@+id/edBatteryBox"
                android:layout_weight="1"
                android:inputType="number"
                android:padding="7dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linLayoutForBoth"
                android:orientation="vertical"
                android:layout_weight="20"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linLayoutLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backColorLayouts"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:minWidth="140dp"
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Serial 2:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/edBatterySerial2"
                            android:text=""
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:minWidth="140dp"
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Serial 3:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/edBatterySerial3"
                            android:text=""
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:minWidth="140dp"
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Custom CD:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/edBatteryCCD"
                            android:text=""
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:minWidth="140dp"
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Manufactured:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/edBatteryArrived"
                            android:text="17/11/2016"
                            android:textSize="16dp"
                            android:inputType="date"
                            android:layout_weight="4"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="7dp"
                            android:minWidth="140dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Location:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/edBatteryLocation"
                            android:text="SLB Base"
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="7dp"
                            android:minWidth="140dp"
                            android:background="@drawable/edittext_shape"
                            android:text="Container:"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/edBatteryContainer"
                            android:text="GYLS-001"
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayoutBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/backColorLayouts">

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:id="@+id/linLayoutRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/backColorLayouts">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:text="Comments:"
                            android:textSize="16dp"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/edBatteryComments"
                            android:text="test from retrofit"
                            android:textSize="16dp"
                            android:layout_weight="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>