<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:background="@color/backColorJobPrecise"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/progress_bar"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="3dp"
                android:gravity="center"
                android:background="@drawable/edittext_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:text="New Job:"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:hint="RU0120GWD001"
                    android:background="@drawable/edittext_shape"
                    android:id="@+id/edJobJobNumber"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <Button
                    android:text="Add"
                    android:backgroundTint="@color/swipeBtnBackground"
                    android:layout_gravity="end"
                    android:textColor="#838383"
                    android:id="@+id/addJobButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="3dp"
                android:id="@+id/linLayoutUp"
                android:background="@color/layoutInner"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinnerClient"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Spinner>

                <Spinner
                    android:id="@+id/spinnerGDP"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Spinner>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linLayoutForBoth"
                    android:orientation="vertical"
                    android:layout_weight="20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_margin="3dp"
                        android:id="@+id/linLayoutLeft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/layoutInner"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/spinnerModem"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                            </Spinner>

                            <Spinner
                                android:id="@+id/spinnerBullplug"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                            </Spinner>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:minWidth="140dp"
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:text="Modem Version:"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobModemVer"
                                android:text="4.13"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:inputType="numberDecimal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:minWidth="140dp"
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:text="Circulation Hours:"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobCirculation"
                                android:text="0"
                                android:textSize="16dp"
                                android:inputType="numberDecimal"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:minWidth="140dp"
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:text="Battery:"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <Spinner
                                android:id="@+id/spinnerBattery"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                            </Spinner>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:minWidth="140dp"
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:text="Maximum Temperature:"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobMaxTemp"
                                android:text="0"
                                android:textSize="16dp"
                                android:inputType="numberDecimal"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:minWidth="120dp"
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:text="1st Engineer:"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <Spinner
                                android:id="@+id/spinnerEngOne"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                            </Spinner>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:minWidth="120dp"
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:text="2nd Engineer:"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <Spinner
                                android:id="@+id/spinnerEngTwo"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                            </Spinner>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:minWidth="80dp"
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:text="From:"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobEngOneArrived"
                                android:hint="2017-11-10"
                                android:textSize="16dp"
                                android:inputType="date"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobEngTwoArrived"
                                android:hint="2017-11-10"
                                android:textSize="16dp"
                                android:inputType="date"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:minWidth="80dp"
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:text="To:"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobEngOneLeft"
                                android:hint="2017-12-10"
                                android:textSize="16dp"
                                android:inputType="date"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobEngTwoLeft"
                                android:hint="2017-12-10"
                                android:textSize="16dp"
                                android:inputType="date"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:padding="7dp"
                                android:minWidth="140dp"
                                android:background="@drawable/edittext_shape"
                                android:text="Container:"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobContainer"
                                android:hint="GYLS-001"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/edJobContArrived"
                            android:hint="2017-12-10"
                            android:textSize="16dp"
                            android:inputType="date"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:padding="7dp"
                            android:background="@drawable/edittext_shape"
                            android:id="@+id/edJobContLeft"
                            android:hint="2017-12-10"
                            android:textSize="16dp"
                            android:inputType="date"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobRig"
                                android:hint="Berkut"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioGroup
                                android:background="@color/swipeButton"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RadioButton
                                    android:buttonTint="@color/colorTool"
                                    android:checked="true"
                                    android:text="No issues"
                                    android:id="@+id/rbNoIssues"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"/>

                                <RadioButton
                                    android:buttonTint="@color/colorIssuesTint"
                                    android:backgroundTint="@color/swipeBtnBackground"
                                    android:text="Yes"
                                    android:id="@+id/rbYesIssues"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"/>

                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:id="@+id/linLayoutRight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/backColorLayouts">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView

                                android:text="Comments:"
                                android:textSize="16dp"
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:padding="7dp"
                                android:background="@drawable/edittext_shape"
                                android:id="@+id/edJobComments"
                                android:text="RU1750"
                                android:textSize="16dp"
                                android:layout_weight="4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

</RelativeLayout>